<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="biggerTextStyle">
            <item name="android:textSize">@dimen/biggerTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#F44336</item>
        <item name="android:shadowDx">@dimen/shadow_dimension</item>
        <item name="android:shadowDy">@dimen/shadow_dimension</item>
        <item name="android:shadowRadius">@dimen/shadow_radius</item>


    </style>

    <style name="smallerTextStyle">
             <item name="android:textSize">@dimen/smallerTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="infoTextStyle">

        <item name="android:textSize">@dimen/infoTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:textColorLink">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/small_margin_left</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:autoLink">all</item>

    </style>
</resources>
